							<i class="fa-solid fa-list-check"></i>
							Projets
						</a>
					</li>
					<li>
						<a href="{{ path('app_employe_index') }}">
							<i class="fa-regular fa-user"></i>
							Équipe
						</a>
					</li>
				</ul>
			</nav>
			<main>


				{% block body %}{% endblock %}
