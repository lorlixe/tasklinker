{% extends 'base.html.twig' %}

{% block title %}Hello EmployeController!
{% endblock %}

{% block body %}
	<header>
		<div id="current-user"></div>
		<div id="title-page">
			<div class="flex-header">
				<h1>Équipe</h1>
			</div>
		</div>
	</header>
	<div id="content">
		<table id="team-container">
			<thead>
				<tr>
					<th>Prénom, Nom</th>
					<th>Statut</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for employe in employes %}

					<tr>
						<td>
							<div class="employee-infos">
								<div class="employee-avatar">
									{{ employe.nom|slice(0,1)|upper }}{{ employe.prenom|slice(0,1)|upper }}
								</div>
								<div class="employee-coords">
									<strong>{{ employe.nom }}
										{{ employe.prenom }}</strong>

									<span>{{ employe.email }}</span>
								</div>
							</div>
						</td>
						<td>{{ employe.contrat.value }}</td>
						<td>
							<a class="button button-edit-team" href="{{ path('app_employe_edit',{id: employe.id}) }}">
								Éditer

							</a>
							<a class="delete-team" href="{{ path('app_employe_remove',{id: employe.id}) }}">
								Supprimer
							</a>
						</td>
					</tr>
				{% else %}
					<li>Aucun enregistrement en base de données.</li>
				{% endfor %}

			</tbody>
		</table>
	</div>
{% endblock %}
