{% extends 'base.html.twig' %}

{% block title %}Hello TacheController!
{% endblock %}
{% block body %}


	<div id="content">
		<div id="projects-container">
			{% for projet in projets %}

				<article class="card-project">
					<a href="{{ path('app_projet_show',{id: projet.id}) }}">
						<h2>{{ projet.nom }}</h2>
					</a>
					<div class="card-project-icons">
						<a href="{{ path('app_projet_edit',{id: projet.id}) }}">
							<i class="fa-solid fa-pen"></i>
						</a>
						<a href="{{ path('app_projet_remove',{id: projet.id}) }}">
							<i class="fa-solid fa-trash"></i>
						</a>
					</div>
				</article>

			{% else %}
				<li>Aucun enregistrement en base de donn√©es.</li>
			{% endfor %}
			<article class="card-project">
				<a href="{{ path('app_projet_new') }}">
					<i class="fa-solid fa-circle-plus add-project-icon"></i>
					<h2>Ajouter un projet</h2>
				</a>
			</article>
		</div>
	</div>
{% endblock %}
